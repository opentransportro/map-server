{
  "name": "tile-server",
  "version": "1.0.0",
  "description": "Vector tile server building lightweight tiles from custom sources",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "start": "tsc-watch --onSuccess \"node ./dist/app.js\" --onFailure \"echo Compilation Failed\"",
    "serve": "node dist/app.js",
    "patch-release": "npm run clean && npm run build && npm version patch && npm publish && git push --follow-tags",
    "minor-release": "npm run clean && npm run build && npm version minor && npm publish && git push --follow-tags",
    "dry-run": "npm publish --dry-run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/geojson": "^7946.0.8",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "geojson": "^0.5.0",
    "geojson-vt": "^3.2.1",
    "lodash": "^4.17.21",
    "request": "^2.88.2",
    "requestretry": "^6.0.0",
    "vt-pbf": "^3.1.3"
  },
  "devDependencies": {
    "@types/lodash": "4.14.175",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.2",
    "@types/requestretry": "^1.12.8",
    "tsc-watch": "^4.5.0",
    "tslint": "^6.1.3",
    "rimraf": "3.0.2",
    "typescript": "^4.4.3"
  }
}
